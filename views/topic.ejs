<%- include("partials/header.ejs") -%>
<%- include("partials/navbar.ejs") -%>

    <div class="topic-body">
        <div class="topic-content">
            <div class="topic-info">
                <img src="<%= topic.topicBanner %>" alt="/images/defaultBanner.jpg">
                <img src="<%= topic.topicPhoto %>" alt="topic photo">
                <h1> <%= topic.topicName %> </h1>
                <h3> <%= topic.topicDescription %> </h3>
                <button>Join</button>
            </div>
            <button>Create Post</button>
        </div>
    </div>
    <%- include("partials/sidebar.ejs") -%>
    <div class="postBox">
        <% posts.forEach(function(post){ %>
            <div class="post">
                <div class="post-details">
                <span class="postTopic"> <%= post.postTopic %> </span>
                <span class="postAuthor"><%= post.postCreatorName %></span>
                <span class="postDate"><%= post.postCreated %></span>
                </div>
                <h2 class="postTitle"><%= post.postTitle %></h2>
                <% if(post.postImage != null){ %>
                    <div class="postImage">
                        <img src="<%= post.image %>" alt="post image" class="postImage">
                    </div> 
                <% } %>
                <p class="postContent"><%= post.postContent %></p>
                <div class="bottom-buttons">
                    <button class="postButton">Enter Discussion <i class="fa-solid fa-right-to-bracket"></i></button>
                    <button class="postButton">Save<i class="fa-regular fa-bookmark"></i></button>
                </div>
            </div>
        <% }); %>
    </div>
    <%- include("partials/about-sidebar.ejs") -%>
    </div>
